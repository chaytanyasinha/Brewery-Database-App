<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detailAddressCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_small"
    android:layout_marginTop="@dimen/spacing_micro"
    android:layout_marginEnd="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_micro"
    app:contentPaddingBottom="@dimen/spacing_micro"
    app:contentPaddingTop="@dimen/spacing_micro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/DetailHeaderStyle"
            android:text="@string/detail_address" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/detailAddressMapImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/brewery_address_image_height"
            android:layout_marginTop="@dimen/spacing_micro"
            android:scaleType="centerCrop"
            app:layout_collapseMode="none"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            tools:src="@tools:sample/backgrounds/scenic" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailAddressTextView"
            style="@style/DetailValueTextStyle"
            tools:maxLines="3"
            tools:text="@tools:sample/lorem/random" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
